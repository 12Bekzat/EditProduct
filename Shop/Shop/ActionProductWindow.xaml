<Window x:Class="Shop.ActionProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop"
        mc:Ignorable="d"
        Title="ActionProductWindow" Height="440" Width="520">
    <Grid >
        <StackPanel Orientation="Vertical">
            <TextBox x:Name="nameProduct" Text="Name Product" FontSize="20" BorderBrush="ForestGreen" Foreground="Black" Width="300" Height="50" Margin="0 50 0 0" GotFocus="ClearName"/>
            <TextBox x:Name="priceProduct" Text="Price Product" FontSize="20" BorderBrush="ForestGreen" Foreground="Black" Width="300" Height="50" Margin="0 50 0 0" GotFocus="ClearPrice"/>
            <TextBox x:Name="countProduct" Text="Count Product" FontSize="20" BorderBrush="ForestGreen" Foreground="Black" Width="300" Height="50" Margin="0 50 0 0" GotFocus="ClearCount"/>
            <Button x:Name="saveBtn" Content="Save" FontSize="20" FontWeight="Bold" Background="ForestGreen" Foreground="White" Width="250" Height="50" Margin="0 30 0 0" Click="Save"/>
        </StackPanel>
    </Grid>
</Window>
