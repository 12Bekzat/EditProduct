<Window x:Class="Shop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Sign In" FontSize="50" Foreground="ForestGreen" Margin="120 0 0 0"/>
            <TextBox x:Name="login" Text="Login" BorderBrush="ForestGreen" FontSize="20" Width="270" Height="50" Margin="0 100 0 0" GotFocus="Clear"/>
            <PasswordBox x:Name="password" BorderBrush="ForestGreen" FontSize="20" Width="270" Height="50" Margin="0 30 0 0"/>
            <Button x:Name="signInBtn" Content="Sign In" Background="ForestGreen" Foreground="White" FontSize="20" Width="200" Height="50" Margin="0 30 0 0" Click="SignIn"/>
        </StackPanel>
    </Grid>
</Window>
